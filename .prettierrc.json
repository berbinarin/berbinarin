{
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "trailingComma": "all",
    "printWidth": 1000,
    "plugins": [
        "prettier-plugin-tailwindcss",
        "prettier-plugin-blade"
    ],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "parser": "blade"
            }
        }
    ]
}
